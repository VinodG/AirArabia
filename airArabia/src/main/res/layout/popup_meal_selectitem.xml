<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_very_small" >

        <TextView
            android:id="@+id/tvMealsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_normal"
            android:text="@string/ChooseItem"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textsize_18" />

        <ImageView
            android:id="@+id/ivCancelMealList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_normal"
            android:src="@drawable/img_cancel_pop_booking" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_mealselecteditems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="@null"
        android:listSelector="@color/transparent_color"
        android:paddingBottom="@dimen/margin_normal"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingRight="@dimen/margin_normal"
        android:visibility="gone" >

        <Button
            android:id="@+id/btnBackinslecteditem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_weight="1"
            android:background="@drawable/btn_red_rounded_corner"
            android:paddingBottom="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_ex_large"
            android:paddingRight="@dimen/margin_ex_large"
            android:paddingTop="@dimen/margin_normal"
            android:text="@string/Confirm"
            android:textColor="@color/white"
            android:visibility="gone" />

