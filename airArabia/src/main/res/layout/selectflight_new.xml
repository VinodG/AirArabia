<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lltop_SelectFlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_red"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_7" >

        <Button
            android:id="@+id/btn_back_SelectFlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="@string/Back"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_17"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvSourceFlight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingRight="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_header_all_screen"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/ivHeaderSelectFlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvDestFlight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_header_all_screen"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvHeadertitle_SelectFlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/data_onheader_size"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivmenu_SelectFlight"
            android:layout_width="@dimen/size_header_btn"
            android:layout_height="@dimen/size_header_btn"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/menu_icon"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/llDateOneWay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivDateOneWayPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_very_small"
                android:src="@drawable/arrow_right_red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDateOneWayPrev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tue 32"
                android:textColor="@color/cal_color"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tvDateOneWayCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_text_btn"
                android:gravity="center"
                android:text="Tue 17"
                android:textColor="@color/cal_color"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tvDateOneWayNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thu 19"
                android:textColor="@color/cal_color"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:id="@+id/ivDateOnewWayNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_very_small"
                android:src="@drawable/arrow_left_red"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivSepreatorDays"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/sep_header" />

        <LinearLayout
            android:id="@+id/llDateReturn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivDateReturnPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_very_small"
                android:src="@drawable/arrow_right_red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDateReturnPrev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tue 17"
                android:textColor="@color/cal_color"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tvDateReturnCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_text_btn"
                android:gravity="center"
                android:text="Tue 17"
                android:textColor="@color/cal_color"
                android:textSize="@dimen/textsize_14" />

            <TextView
                android:id="@+id/tvDateReturnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tue 17"
                android:textColor="@color/cal_color"
                android:textSize="@dimen/textsize_14" />

            <ImageView
                android:id="@+id/ivDateReturnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_very_small"
                android:src="@drawable/arrow_left_red"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/sep_header" />

    <TextView
        android:id="@+id/tvSelectFlightSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginTop="@dimen/margin_normal"
        android:text="@string/please_select_your_flight"
        android:textColor="@color/cal_color"
        android:textSize="@dimen/tvTotal_size" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >         

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llFragmentFlights"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/llOneWayFlightView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvDepartTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/margin_small"
                        android:text="@string/Departing_depart"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_16"
                        android:visibility="visible" />

                    <fragment
                        android:id="@+id/frFlightOneWay"
                        android:name="com.winit.airarabia.SelectFlightOneWayFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvNoDataFlightOneWay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/margin_normal"
                        android:text="@string/NoFlightsAvailable"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:id="@+id/viewSpace"
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/llReturnFlightView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvReturnTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/Returning"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_16" />

                    <fragment
                        android:id="@+id/frFlightReturn"
                        android:name="com.winit.airarabia.SelectFlightReturnFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvNoDataFlightReturn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="@dimen/margin_normal"
                        android:text="@string/NoFlightsAvailable"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_extra_large"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvNoDataFlightAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@string/NoFlightsAvailable"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/text_size_large"
                android:visibility="gone" />

            

                <LinearLayout
                    android:id="@+id/llTotalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:background="@drawable/round_white_more_shaded_btn_bg2"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_normal"
                    android:visibility="visible" 
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/tvTotalTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Total"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_17" />

                    <TextView
                        android:id="@+id/tvTotalTagColan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=":"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_17" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red"
                        android:textSize="@dimen/textsize_17" />
                </LinearLayout>

            <LinearLayout
                android:id="@+id/llHajj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@drawable/round_white_more_shaded_btn_bg2"
                android:layout_margin="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tvHajj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/umrah_message"
                    />
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFareBottomCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_4"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_small"            
                    android:orientation="horizontal"
                    android:visibility="visible" 
                  	>

                    <TextView
                        android:id="@+id/tv_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:gravity="center"
                        android:text="*"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/textsize_13" />

                    <TextView
                        android:id="@+id/tv_lable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fare_note"
                        android:textSize="@dimen/textsize_13"
                        android:visibility="visible" />
                </LinearLayout>            
        </LinearLayout>
    </ScrollView>
</LinearLayout>