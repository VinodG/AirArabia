<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_book_flight"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_normal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_normal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/call_center"
                android:paddingBottom="60dp"
                android:paddingTop="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/callcenterinfo"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/Country"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_contactsCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white_more_shaded_btn_bg"
                android:padding="@dimen/padding_normal"
                android:text="@string/selectCountry"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/City"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_contactsCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_white_more_shaded_btn_bg"
                android:padding="@dimen/padding_normal"
                android:text="@string/selectCity"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_mainincallcenters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:background="@drawable/round_white_more_shaded_btn_bg"
                android:orientation="vertical"
                android:padding="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tv_officelocationsincallcenters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selectflightbg"
                    android:gravity="left|center_vertical"
                    android:text="@string/OfficeLocation"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_normal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_countryincallcenters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="left|center_vertical"
                    android:layout_marginBottom="@dimen/margin_normal"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:gravity="left|center_vertical"
                        android:text="@string/CallCenterNumber"
                        android:textColor="@color/text_color_red"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/tv_callcenternum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCallCenter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:gravity="left|center_vertical"
                        android:text="@string/CallCenterNumber"
                        android:textColor="@color/text_color_red"
                        android:textSize="@dimen/text_size_normal"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tv_callcenternum2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:clickable="true"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:gravity="left|center_vertical"
                        android:text="@string/Timings"
                        android:textColor="@color/text_color_red"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/tv_callTiming"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llcitycallcenters"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_normal"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>