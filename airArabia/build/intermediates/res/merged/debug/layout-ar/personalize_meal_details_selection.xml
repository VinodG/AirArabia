<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/img_redbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_red"
        android:orientation="vertical"
        android:padding="@dimen/margin_small"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_normal" >

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/Back"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_back_all_screen"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvSelectHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.50"
                android:gravity="center_horizontal"
                android:paddingLeft="@dimen/margin_normal"
                android:text="@string/SeatSelection"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_header_all_screen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingBottom="@dimen/margin_very_small"
                android:paddingTop="@dimen/margin_very_small"
                android:text="@string/done"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_back_all_screen" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_selecTiltle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="@dimen/margin_normal"
        android:text="@string/SelectBaggage"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/textsize_18" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/llBaggageMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_normal"
            android:paddingLeft="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_normal" >
        </LinearLayout>
    </ScrollView>

</LinearLayout>