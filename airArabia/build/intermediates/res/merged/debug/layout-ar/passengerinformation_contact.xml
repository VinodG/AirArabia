<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_book_flight"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:gravity="right|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:paddingBottom="@dimen/passeengercontactinfo_header_bot"
            android:paddingTop="@dimen/passeengercontactinfo_header"
            android:text="@string/Please_enter_details"
            android:textColor="@color/text_color"
            android:textSize="@dimen/tvTotal_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/black_outer_round_rect"
            android:gravity="right|center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/margin_normal" >

            <TextView
                android:id="@+id/tvContactinformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:text="@string/ContactPerson"
                android:textColor="@color/text_color"
                android:textSize="@dimen/passeengerinfo_forlogintext" />

            <LinearLayout
                android:id="@+id/llCheckContactP1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_normal"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_passengertextboxbeside"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="@string/Passanger_one_contact_person"
                    android:textColor="@color/text_color_gray"
                    android:textSize="@dimen/checkbox_text" />

                <ImageView
                    android:id="@+id/ivCheckContactP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:gravity="right|center_vertical"
                    android:src="@drawable/checkblack" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@drawable/seperator_full" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_small" >

                    <TextView
                        android:id="@+id/tvFirstnameTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:text="@string/FirstName"
                        android:textColor="@color/text_color_red"
                        android:textSize="@dimen/passeengerinfo_fortiletag"
                        android:visibility="visible" />

                    <EditText
                        android:id="@+id/etContactfirstname"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/field_hgt"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:hint="@string/FirstName"
                        android:inputType="textCapSentences"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/very_light_gray"
                        android:textSize="@dimen/passeengerinfo_forlogintext" />
                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/sep_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_small" >

                    <TextView
                        android:id="@+id/tvContacttitleTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:paddingBottom="@dimen/margin_small"
                        android:singleLine="true"
                        android:text="@string/Title"
                        android:textColor="@color/text_color_red"
                        android:textSize="@dimen/passeengerinfo_fortiletag"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvContacttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/field_hgt"
                        android:background="@null"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="right|center_vertical"
                        android:hint="@string/Title"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/very_light_gray"
                        android:textSize="@dimen/passeengerinfo_forlogintext" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seperator_full" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/margin_small" >

                <TextView
                    android:id="@+id/tvLastnameTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="@string/LastName"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/passeengerinfo_fortiletag"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etContactlastname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_hgt"
                    android:background="@null"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890 "
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="@string/LastName"
                    android:inputType="textCapSentences"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/very_light_gray"
                    android:textSize="@dimen/passeengerinfo_forlogintext" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seperator_full" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/margin_small" >

                <TextView
                    android:id="@+id/tvNationalityTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="@string/Nationality"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/passeengerinfo_fortiletag"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/tvContactnationality"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_hgt"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="@string/Nationality"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/very_light_gray"
                    android:textSize="@dimen/passeengerinfo_forlogintext" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seperator_full" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/margin_small" >

                <TextView
                    android:id="@+id/tvContactcityTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="@string/CountryOfResidence"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/passeengerinfo_fortiletag"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/tvContactcity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_hgt"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="@string/CountryOfResidence"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/very_light_gray"
                    android:textSize="@dimen/passeengerinfo_forlogintext" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seperator_full" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/margin_small" >

                <TextView
                    android:id="@+id/tvContactemailTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="right|center_vertical"
                    android:singleLine="true"
                    android:text="@string/Email"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/passeengerinfo_fortiletag"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etContactemail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_hgt"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="@string/Email"
                    android:inputType="textEmailAddress"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789@_.-"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/very_light_gray"
                    android:textSize="@dimen/passeengerinfo_forlogintext" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seperator_full" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:gravity="right|center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvContactphonenumTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:gravity="right|center_vertical"
                        android:paddingRight="@dimen/margin_normal"
                        android:singleLine="true"
                        android:text="@string/MobileNumber"
                        android:textColor="@color/text_color_red"
                        android:textSize="@dimen/passeengerinfo_fortiletag"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/etContactphonenum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:digits="1234567890"
                        android:ellipsize="end"
                        android:gravity="right|center_vertical"
                        android:hint="@string/MobileNumber"
                        android:inputType="number"
                        android:maxLength="16"
                        android:paddingRight="@dimen/margin_normal"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/very_light_gray"
                        android:textSize="@dimen/passeengerinfo_forlogintext" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_very_small"
                    android:background="@drawable/sep_horizontal"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:gravity="right|center_vertical"
                        android:singleLine="true"
                        android:text="@string/countrycode"
                        android:textColor="@color/text_color_red"
                        android:textSize="@dimen/passeengerinfo_fortiletag"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal" >

                        

                        <TextView
                            android:id="@+id/tvContactphonenumCountryCode"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="00"
                            android:textColorHint="@color/very_light_gray"
                            android:textSize="@dimen/passeengerinfo_forlogintext" />
                        
                        <TextView
                            android:id="@+id/tvContactphonenumPlusSymbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="1dp"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="+"
                            android:textColor="@color/text_color"
                            android:textColorHint="@color/text_color"
                            android:textSize="@dimen/passeengerinfo_forlogintext"
                            android:textStyle="bold"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/seperator_full"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>