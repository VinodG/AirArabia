<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSelectFlightMain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="@dimen/margin_normal"
    android:layout_marginRight="@dimen/margin_normal"
    android:background="@drawable/white_box_n"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_normal"
    android:paddingTop="@dimen/margin_normal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <View
            android:id="@+id/viewSpace5"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llPriceTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/margin_normal"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_small"
                android:gravity="center|center_vertical"
                android:textColor="@color/text_color_red"
                android:textSize="25sp"
                android:typeface="sans" 
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/From"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_14"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/tvCurrencyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_small"
                    android:text="AED"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/textsize_14"
                    android:typeface="sans" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvSelectedDestTime1D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(1+D)"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSelectedDestTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="KWI"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textsize_15" />

            <TextView
                android:id="@+id/tvSelectedDest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="KWI"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ivFlightConnectType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/flight_connecting"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/tvSelectedFlightType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SHJ"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textsize_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSelectedOriginTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SHJ"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textsize_15" />

            <TextView
                android:id="@+id/tvSelectedOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="SHJ"
                android:textColor="@color/text_color"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>