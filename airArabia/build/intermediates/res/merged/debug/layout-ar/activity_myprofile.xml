<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_book_flight"
    android:padding="@dimen/margin_normal" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/llPassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llPassengerDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:background="@drawable/round_white_bg"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tvPassengerDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_normal"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_very_small"
                    android:text="@string/PassengerDetails"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/textsize_18" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/sep" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    
                    
                    <EditText
                        android:id="@+id/etFirstName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/FirstName"
                        android:gravity="right"
                        android:paddingBottom="@dimen/margin_normal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_normal"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:imeOptions="actionNext"
                        android:textSize="@dimen/textsize_17" />

                   

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/sep_horizontal" />
                    
                     <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/Title"
                        android:paddingBottom="@dimen/margin_normal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_normal"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_17" />

                    
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/sep" />

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/LastName"
                    android:gravity="right"
                    android:paddingBottom="@dimen/margin_normal"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_normal"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_17" >
                </EditText>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/sep" />

                <EditText
                    android:id="@+id/tvNationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/Nationality"
                    android:imeOptions="actionNext"
                    android:gravity="right"
                    android:paddingBottom="@dimen/margin_normal"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_normal"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_17" />

                <LinearLayout
                    android:id="@+id/llDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/sep" />

                    <EditText
                        android:id="@+id/tvDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/DOB_Optional"
                        android:paddingBottom="@dimen/margin_normal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_normal"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_17" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/sep" />

                    <EditText
                        android:id="@+id/etPassPortNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/passPortNoOptional"
                        android:paddingBottom="@dimen/margin_normal"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_normal"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_17" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/sep" />

                    <EditText
                        android:id="@+id/etAirwardId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="@string/airewardsId_cap"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="@dimen/margin_small"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_normal"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_17" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_contectDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_white_bg"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tvContactDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_normal"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_very_small"
                    android:text="@string/contactdetails_myprofile"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/text_size_large" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/sep" />

                <TextView
                    android:id="@+id/tvCountryOfResidence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/CountryOfResidence"
                    android:paddingBottom="@dimen/margin_normal"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_normal"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_17" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/sep" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/Email"
                    android:gravity="right"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="@dimen/margin_normal"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_normal"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_17" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/sep" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/etMobile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="@string/Mobile"
                        android:inputType="phone"
                        android:gravity="right"
                        android:paddingBottom="@dimen/margin_small"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_normal"
                        android:singleLine="true"
                        android:imeOptions="actionDone"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_17" />
                    
                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/sep_horizontal" />

                    <TextView
                        android:id="@+id/tvmobilecountrycode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/countrycode"
                        android:gravity="right"
                        android:paddingBottom="@dimen/margin_small"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_normal"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_17" />
                    
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/sep"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_preference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_white_bg"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tvPreference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|right"
                    android:paddingBottom="@dimen/margin_normal"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_very_small"
                    android:text="@string/preferences"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/textsize_17" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/sep" />

                <TextView
                    android:id="@+id/tvTitle_destinstion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/fav_destinstion"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_normal"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_17" />

                <TextView
                    android:id="@+id/tvFev_destinstion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="right"
                    android:drawableLeft="@drawable/arrow_ar"
                    android:hint="@string/fav_destinstion"
                    android:paddingBottom="@dimen/margin_normal"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_normal"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_17" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/sep" />

                <TextView
                    android:id="@+id/tvTitlePassengers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="right"
                    android:hint="@string/otherPassengers"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_normal"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_17"
                    android:visibility="visible"  />

                <TextView
                    android:id="@+id/tvOtherPassengers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:singleLine="true"
                    android:gravity="right"
                    android:drawableLeft="@drawable/arrow_ar"
                    android:drawablePadding="@dimen/margin_very_small"
                    android:hint="@string/otherPassengers"
                    android:paddingBottom="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_normal"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_17"
                    android:visibility="visible"  />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>