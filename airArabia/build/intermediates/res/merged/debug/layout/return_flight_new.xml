<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lltop_SelectFlight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small" >

        <Button
            android:id="@+id/btn_back_SelectFlight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="@string/Back"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvSourceFlight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingRight="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/ivHeaderSelectFlight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvDestFlight1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/margin_normal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvHeadertitle_SelectFlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivmenu_SelectFlight"
            android:layout_width="@dimen/size_header_btn"
            android:layout_height="@dimen/size_header_btn"
            android:layout_gravity="center"
            android:padding="10dp"
            android:src="@drawable/menu_icon"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/llDateOneWay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivDateOneWayPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_red" />

            <TextView
                android:id="@+id/tvDateOneWayPrev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tvDateOneWayCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_text_btn"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDateOneWayNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:id="@+id/ivDateOnewWayNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left_red" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivSepreatorDays"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/sep_header" />

        <LinearLayout
            android:id="@+id/llDateReturn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivDateReturnPrev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_red" />

            <TextView
                android:id="@+id/tvDateReturnPrev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tvDateReturnCurrent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_text_btn"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDateReturnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:id="@+id/ivDateReturnNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left_red" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/sep_header" />

    <TextView
        android:id="@+id/tvSelectFlightSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/please_select_your_flight"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/text_size_large" />

    <LinearLayout
        android:id="@+id/llFragmentFlights"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible" >

        <LinearLayout
            android:id="@+id/llOneWayFlightView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvDepartTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_small"
                android:text="@string/Departing"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal"
                android:visibility="visible" />

            <ListView
                android:id="@+id/departureList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvNoDataFlightOneWay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@string/NoFlightsAvailable"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_large"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llReturnFlightView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/Returning"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_normal" />

            <ListView
                android:id="@+id/arrivalList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal" />

            <TextView
                android:id="@+id/tvNoDataFlightReturn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_normal"
                android:text="@string/NoFlightsAvailable"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_extra_large"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoDataFlightAll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="@dimen/margin_normal"
        android:text="@string/NoFlightsAvailable"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:background="@drawable/round_white_more_shaded_btn_bg2"
        android:orientation="horizontal"
        android:visibility="gone"
        android:padding="@dimen/margin_normal" >

        <TextView
            android:id="@+id/tvTotalTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Total"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tvTotalTagColan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=":"
            android:textColor="@color/text_color"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>