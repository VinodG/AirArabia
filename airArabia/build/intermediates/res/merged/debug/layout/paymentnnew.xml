<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_book_flight"
    android:orientation="vertical"
    android:padding="10dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_white_bg"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tvImportantNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_small"
                    android:text="@string/ImpNote"
                    android:textSize="@dimen/text_size_extra_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPaymentImpNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/padding_normal"
                    android:text="@string/PaymentDescription"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_white_bg"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/btn_totalprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:gravity="center_vertical"
                    android:text="@string/TotalPrice"
                    android:textSize="@dimen/text_size_btn"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvPaymentTotalFlightsServicesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/TotalFlightsServices"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/tvPaymentTotalFlightsServicesCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvPaymentTotalAdminText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/AdminiFee"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/tvPaymentTotalAdminCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvPaymentTotalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/TotalAmount"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/tvPaymentTotalCharge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/red_new_text"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_white_bg"
                android:orientation="vertical"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tvHeaderSecurePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_normal"
                    android:gravity="center_vertical"
                    android:text="@string/SecuredCreditCard"
                    android:textSize="@dimen/text_size_btn"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvCardholderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/CardHolderName"
                        android:textSize="13sp" />

                    <EditText
                        android:id="@+id/etCardholderName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/input_black"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:hint="@string/CardHolderName"
                        android:inputType="text"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvCardNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/CardNumber"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/etCardNumberOne"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/input_cardnum"
                            android:ems="4"
                            android:gravity="center_vertical"
                            android:hint="@string/CardNumbernew"
                            android:inputType="number"
                            android:maxLength="4"
                            android:nextFocusRight="@+id/etCardNumberTwo"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etCardNumberTwo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_weight="1"
                            android:background="@drawable/input_cardnum"
                            android:ems="4"
                            android:gravity="center_vertical"
                            android:hint="@string/CardNumbernew"
                            android:inputType="number"
                            android:maxLength="4"
                            android:nextFocusRight="@+id/etCardNumberThree"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etCardNumberThree"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_weight="1"
                            android:background="@drawable/input_cardnum"
                            android:ems="4"
                            android:gravity="center_vertical"
                            android:hint="@string/CardNumbernew"
                            android:inputType="number"
                            android:maxLength="4"
                            android:nextFocusRight="@+id/etCardNumberfour"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etCardNumberfour"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_normal"
                            android:layout_weight="1"
                            android:background="@drawable/input_cardnum"
                            android:ems="4"
                            android:gravity="center_vertical"
                            android:hint="@string/CardNumbernew"
                            android:inputType="number"
                            android:maxLength="4"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvCardExpiryDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/expiration"
                                android:textSize="@dimen/text_size_normal" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal" >

                                <Spinner
                                    android:id="@+id/spExpiryMonth"
                                    android:layout_width="@dimen/spinnerMonth"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_small"
                                    android:background="@drawable/input_black"
                                    android:entries="@array/country_arrays"
                                    android:padding="10dp"
                                    android:prompt="@string/country_prompt"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_normal" />

                                <Spinner
                                    android:id="@+id/spExpiryYear"
                                    android:layout_width="@dimen/spinneryear"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/padding_normal"
                                    android:layout_marginTop="@dimen/margin_small"
                                    android:background="@drawable/input_black"
                                    android:padding="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_size_normal" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tvCVCcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_weight="1"
                                android:text="@string/cvccode"
                                android:textSize="13sp" />

                            <EditText
                                android:id="@+id/etCVCcode"
                                android:layout_width="@dimen/spinneryear"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/input_cardnum"
                                android:hint="@string/cvc"
                                android:inputType="text"
                                android:padding="10dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>