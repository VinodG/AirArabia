<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_book_flight"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_7"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_white_more_shaded_btn_bg2"
                android:orientation="horizontal"
                android:padding="@dimen/margin_small" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/margin_normal"
                    android:paddingRight="@dimen/margin_normal" >

                    <TextView
                        android:id="@+id/tv_baggae_textname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:text="@string/Baggageselection"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_16" />

                    <LinearLayout
                        android:id="@+id/llBaggageMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEditBaggage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/margin_normal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/margin_very_small"
                        android:src="@drawable/bag_new" />

                    <Button
                        android:id="@+id/btnEditBaggage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/addbutton"
                        android:paddingBottom="@dimen/margin_very_small"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_very_small"
                        android:text="@string/edit"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@drawable/round_white_more_shaded_btn_bg2"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_normal"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_normal" >

                    <TextView
                        android:id="@+id/tv_seatselecName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:text="@string/SeatSelection"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:id="@+id/tvseatselectdiscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/seatdescription"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_14" />

                    <LinearLayout
                        android:id="@+id/llSeatMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEditSeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/margin_normal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/margin_very_small"
                        android:src="@drawable/seat_new" />

                    <Button
                        android:id="@+id/btnEditSeat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/addbutton"
                        android:paddingBottom="@dimen/margin_very_small"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_very_small"
                        android:text="@string/add"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@drawable/round_white_more_shaded_btn_bg2"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_normal"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_normal" >

                    <TextView
                        android:id="@+id/tvTagMealSelection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:text="@string/mealselection"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:id="@+id/tvmealselectdiscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mealdescription"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_14" />

                    <LinearLayout
                        android:id="@+id/llMealMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEditMeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/margin_normal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/margin_very_small"
                        android:src="@drawable/meal_new" />

                    <Button
                        android:id="@+id/btnEditMeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/addbutton"
                        android:paddingBottom="@dimen/margin_very_small"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_very_small"
                        android:text="@string/add"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llHalaTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@drawable/round_white_more_shaded_btn_bg2"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_normal"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_normal" >

                    <TextView
                        android:id="@+id/tvTagAirportService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:text="@string/airportservice"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:id="@+id/tvairportservicediscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/airportdescription"
                        android:textSize="@dimen/textsize_14" />

                    <LinearLayout
                        android:id="@+id/llHalaMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEditHala"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/margin_normal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/margin_very_small"
                        android:src="@drawable/airportservice_new" />

                    <Button
                        android:id="@+id/btnEditHala"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/addbutton"
                        android:paddingBottom="@dimen/margin_very_small"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_very_small"
                        android:text="@string/add"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_normal"
                android:background="@drawable/round_white_more_shaded_btn_bg2"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/margin_normal"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:paddingTop="@dimen/margin_small" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_normal" >

                    <TextView
                        android:id="@+id/tvTagTravelInsurance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:background="@null"
                        android:gravity="start|center_vertical"
                        android:text="@string/travelinsurance"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_16" />

                    <TextView
                        android:id="@+id/tvinsuravcediscription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/insurancedescription"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/textsize_14" />

                    <LinearLayout
                        android:id="@+id/llInsuranceMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEditInsurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/margin_normal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/margin_very_small"
                        android:src="@drawable/travelinsurance_new" />

                    <Button
                        android:id="@+id/btnEditInsurance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:background="@drawable/addbutton"
                        android:paddingBottom="@dimen/margin_very_small"
                        android:paddingLeft="@dimen/margin_small"
                        android:paddingRight="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_very_small"
                        android:text="@string/add"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>