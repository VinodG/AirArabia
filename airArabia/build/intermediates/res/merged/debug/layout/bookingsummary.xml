<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_redbg"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llPassangerTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/tvPassengerCountTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:text="@string/Passengers"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_18" />
                <!-- android:text="@string/Passengers" -->

                <TextView
                    android:id="@+id/tvPassengerCountTitleColan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:text=":"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tvBookSummaryPassengers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOutData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_white_more_shaded_btn_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_small"
                android:paddingLeft="@dimen/margin_normal"
                android:paddingRight="@dimen/margin_normal"
                android:paddingTop="@dimen/margin_small"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_small" 
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flight_oneway" />

                    <TextView
                        android:id="@+id/tvOutText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/Departing"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:src="@drawable/flight_oneway"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvBookSummaryDepatureOut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:gravity="start"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <ImageView
                        android:id="@+id/ivFlightInfoOneWay"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="right"
                        android:src="@drawable/info_question_mark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOutSrcDest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:layout_marginRight="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_normal"
                    android:gravity="left"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvBookSummaryDepatureTimeOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="SHJ"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_16" />

                        <TextView
                            android:id="@+id/tvBookSummarySourceOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="SHJ"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ivFlightConnectTypeOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/flight_connecting" />

                        <TextView
                            android:id="@+id/tvFlightConnectTypeOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvBookSummaryArrivalTimeOut"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="KWI"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_16" />

                        <TextView
                            android:id="@+id/tvBookSummaryDestOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="KWI"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_16" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTime1DOut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="(1+D)"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInboundData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@drawable/round_white_more_shaded_btn_bg"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_small"
                android:paddingLeft="@dimen/margin_normal"
                android:paddingRight="@dimen/margin_normal"
                android:paddingTop="@dimen/margin_small"
                android:visibility="gone" >
                
             <!--    Need to remove here -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_small"
                    android:paddingLeft="@dimen/margin_small"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_small"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/flight_return" />

                    <TextView
                        android:id="@+id/tvInText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="@string/Arriving"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:src="@drawable/flight_return"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvBookSummaryDepatureIn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <ImageView
                        android:id="@+id/ivFlightInfoReturn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="start"
                        android:src="@drawable/info_question_mark" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llInboundPlaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin_very_small"
                    android:layout_marginBottom="@dimen/margin_normal"
                    android:paddingRight="@dimen/margin_small"
                    android:paddingTop="@dimen/margin_small" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvBookSummaryDepatureTimeIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="SHJ"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_16" />

                        <TextView
                            android:id="@+id/tvBookSummarySourceIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="SHJ"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_16" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/ivFlightConnectTypeIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/flight_connecting" />

                        <TextView
                            android:id="@+id/tvFlightConnectTypeIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="SHJ"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tvBookSummaryArrivalTimeIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="KWI"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_16" />

                        <TextView
                            android:id="@+id/tvBookSummaryDestIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="KWI"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/textsize_16" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTime1DIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="(1+D)"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_normal"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAdditionalServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/round_white_more_shaded_btn_bg"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/tvAdditionalServicesHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:text="@string/AdditionalServices"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_18" />

                <LinearLayout
                    android:id="@+id/llFlightCose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvFlight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Flight"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_very_small"
                        android:layout_weight="1"
                        android:text=":"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tvTotalFlightCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBaggageCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvBaggage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Baggages"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_very_small"
                        android:layout_weight="1"
                        android:text=":"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tvBaggageCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSeatsCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvSeats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Seats"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_very_small"
                        android:layout_weight="1"
                        android:text=":"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tvSeatsCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMealsCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvMeals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Meals"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_very_small"
                        android:layout_weight="1"
                        android:text=":"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tvMealsCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llHalaCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvAirportServices"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/airportservice"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_very_small"
                        android:layout_weight="1"
                        android:text=":"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tvHalaCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llInsuranceCost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:id="@+id/tvTravelSecure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Insurance"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_very_small"
                        android:layout_weight="1"
                        android:text=":"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:id="@+id/tvInsuranceCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_gray"
                        android:textSize="@dimen/text_size_large" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginBottom="@dimen/margin_large"
                android:background="@drawable/round_white_more_shaded_btn_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_normal" >

                <TextView
                    android:id="@+id/tvTotalFlightTag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/TotalFlightsServices"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/textsize_18" />

                <TextView
                    android:id="@+id/tvBookSummaryTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/text_color_red"
                    android:textSize="@dimen/textsize_18" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>